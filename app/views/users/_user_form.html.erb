<%= form_for @user do |f| %>
  <div class="form-group row">
    <%= f.label :username, class: 'label sess-label' %>
    <%= f.text_field :username, class: 'input-field sess-input-field' %>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: 'label sess-label' %>
    <%= f.text_field :email, class: 'input-field sess-input-field' %>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'label sess-label' %>
    <%= f.password_field :password, class: 'input-field sess-input-field' %>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: 'label sess-label' %>
    <%= f.password_field :password_confirmation, class: 'input-field sess-input-field' %>
  </div>

  <div class="form-group row">
    <%= f.submit yield(:button_text), class: 'sess-button btn btn-primary' %>
  </div>
<% end %>
