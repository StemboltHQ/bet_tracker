<div class="container">
  <% if current_user %>
    <hr>
  <% end %>

  <% unless current_user %>
    <div class="row text-center">
      <div class="col col-lg-4 offset-lg-4">
        <h2>Welcome, stranger!</h2><br>
      </div>
    </div>
    <div class="row">
      <div class="col col-lg-1 offset-lg-5">
        <%= link_to 'Log in', new_session_path %>
      </div>
      <div class="col col-lg-1">
        <%= link_to 'Sign up', new_user_path %>
      </div>
    </div>
  <% end %>
</div>
