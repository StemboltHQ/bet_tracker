<div class="container">
  <div class="row">
    <div class="col col-lg-4 col-lg-offset-4 text-center">
      <h1>Log in</h1>
      <hr>
      <div id="login_form">
        <%= form_for :session, url: login_path  do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: 'col-sm-4' %>
            <%= f.text_field :email, class: 'col-sm-8' %>
          </div>
          <div class="form-group row">
            <%= f.label :password, class: 'col-sm-4' %>
            <%= f.text_field :password, class: 'col-sm-8' %>
          </div>
          <div class="form-group row">
            <%= f.submit 'Log in', class: 'col-sm-8 col-sm-offset-4 btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
