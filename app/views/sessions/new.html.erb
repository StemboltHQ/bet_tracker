<div class="container">
  <div class="row">
    <div class="col col-lg-4 offset-lg-4 text-center">
      <h1>Log in</h1>
      <hr>
      <div id="login-form">
        <%= form_for :session, url: new_session_path  do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: 'label sess-label' %>
            <%= f.text_field :email, class: 'input-field sess-input-field' %>
          </div>
          <div class="form-group row">
            <%= f.label :password, class: 'label sess-label' %>
            <%= f.password_field :password, class: 'input-field sess-input-field' %>
          </div>
          <div class="form-group row">
            <%= f.submit 'Log in', class: 'sess-button btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
